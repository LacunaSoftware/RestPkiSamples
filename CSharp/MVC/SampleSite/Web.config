<?xml version="1.0" encoding="utf-8"?>
<configuration>

	<configSections>
		<section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
	</configSections>
	
	<appSettings>

		<!-- ================================================================
		               >>>> PASTE YOUR API ACCESS TOKEN BELOW <<<<
		     ================================================================ -->
		<add key="RestPkiAccessToken" value="YOUR API ACCESS TOKEN HERE" />

		<!-- 
			In order to use this sample on a "on premises" installation of Rest PKI,
			uncomment the settings below and fill their values:
			
			RestPkiEndpoint : address of your Rest PKI installation (with the trailing '/' character)
			WebPkiLicense   : Base64-encoded binary license for the Web PKI component
			
			If you are using the official Rest PKI on https://pki.rest/, please ignore these settings
		-->
		<!--
			<add key="RestPkiEndpoint" value="https://restpki.yourdomainhere.com/" />
    -->
    <!--To use a different URL other than localhost you need an WebPkiLicense-->
    <!--    
			<add key="WebPkiLicense" value="==== YOUR WebPkiLicense ====" />
    -->


    <add key="webpages:Version" value="3.0.0.0" />
		<add key="webpages:Enabled" value="false" />
		<add key="PreserveLoginUrl" value="true" />
		<add key="ClientValidationEnabled" value="true" />
		<add key="UnobtrusiveJavaScriptEnabled" value="true" />
	</appSettings>

	<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
		<targets async="true">
			<!-- To diagnose any problems, set a file path for logging below -->
			<target name="log" xsi:type="File" fileName="C:\Temp\RestPkiCSharpSample.log" layout="${longdate} ${level} ${logger} ${threadid}: ${message}${onexception:${newline}${exception:format=tostring}}" />
		</targets>
		<rules>
			<logger name="*" writeTo="log" />
		</rules>
	</nlog>
	
	<system.web>
		<compilation debug="true" targetFramework="4.5" />
		<httpRuntime targetFramework="4.5" />
		<pages>
			<namespaces>
				<add namespace="System.Web.Helpers" />
				<add namespace="System.Web.Mvc" />
				<add namespace="System.Web.Mvc.Ajax" />
				<add namespace="System.Web.Mvc.Html" />
				<add namespace="System.Web.Routing" />
				<add namespace="System.Web.WebPages" />
			</namespaces>
		</pages>
		<httpModules />
		<authentication mode="Forms" />
	</system.web>
	<system.webServer>
		<validation validateIntegratedModeConfiguration="false" />
		
		<modules />
	</system.webServer>
	<runtime>
		<assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
